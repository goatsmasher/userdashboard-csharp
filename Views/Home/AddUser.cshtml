@{ ViewData["Title"] = "Add a new User"; }
<h3>Add a new user</h3>
<a href="/dashboard"><button type="button" class="btn btn-primary">Return to Dashboard</button></a>

<div class="row">
    <div class="col-sm-4">
        <form action="/add_user" method="post">
            <div class="form-group">
                <label for="Email Address">Email Address:</label>
                <input name="email" type="email" class="form-control" id="formGroupExampleInput">
            </div>
            <div class="form-group">
                <label for="Password">First Name:</label>
                <input name="first_name" type="text" class="form-control" id="formGroupExampleInput2">
            </div>
            <div class="form-group">
                <label for="Password">Last Name:</label>
                <input name="last_name" type="text" class="form-control" id="formGroupExampleInput2">
            </div>
            <div class="form-group">
                <label for="Password">Password:</label>
                <input name="password" type="password" class="form-control" id="formGroupExampleInput2">
            </div>
            <div class="form-group">
                <label for="Password">Password Confirmation:</label>
                <input name="password_confirmation" type="password" class="form-control" id="formGroupExampleInput2">
            </div>
            <input type="submit" class="btn btn-success" value="Create">
        </form>
    </div>
</div>