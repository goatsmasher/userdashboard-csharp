@{ ViewData["Title"] = "Edit User"; }
<h2>Edit User #@ViewBag.thisuser.id</h2>
<a href="/dashboard"><button type="button" class="btn btn-primary">Return to Dashboard</button></a>

<div class="row response">
    <div class="col-sm-4">
        <form action="update/@ViewBag.thisuser.id" method="post" id="generate">
            <div class="form-group">
                <label for="Email Address">Email Address:</label>
                <input type="text" class="form-control" name="email" value="@ViewBag.thisuser.email" required>
            </div>
            <div class="form-group">
                <label for="text">First Name:</label>
                <input type="text" class="form-control" name="first_name" value="@ViewBag.thisuser.first_name" required>
            </div>
            <div class="form-group">
                <label for="text">Last Name:</label>
                <input type="text" class="form-control" name="last_name" value="@ViewBag.thisuser.last_name" required>
            </div>
            <div class="form-group">
                <label for="text">User Level:</label>
                <select class="form-control" id="" name="admin">
                    <option value="1">admin</option>
                    <option value="0">normal</option>
                </select>
            </div>
            <input type="submit" class="btn btn-success text-sm-right" value="Save">
        </form>
    </div>
    <div class="col-sm-4 offset-2">
        <form>
            <div class="form-group">
                <label for="Password">Password:</label>
                <input type="password" class="form-control" id="formGroupExampleInput">
            </div>
            <div class="form-group">
                <label for="Password Confirmation">Password Confirmation:</label>
                <input type="password" class="form-control" id="formGroupExampleInput2">
            </div>
            <input type="submit" class="btn btn-success text-sm-right" value="Update Password">
        </form>
    </div>
</div>
</div>
</div>
<div class="row">

</div>