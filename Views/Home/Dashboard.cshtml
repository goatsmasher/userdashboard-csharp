@{ ViewData["Title"] = "Dashboard"; }
@{ if (ViewBag.user.admin == 1){
<p>Logged in as an Admin</p>
} }

<h3>All Users</h3>
<a href="/signin"><button type="button" class="btn btn-primary">Logout</button></a>
<a href="/users/new"><button type="button" class="btn btn-success">Add New User</button></a>
<div class="row">
    <div class="col-sm-8">
        <table class="table table-striped table-hover table-bordered thead">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Created At</th>
                    <th>User Level</th>
                    @{ if (@ViewBag.user.admin == 1){
                    <th>Actions</th>}}
                </tr>
            </thead>
            <tbody>
                @{ foreach(var user in @ViewBag.allusers){
                <tr>
                    <th scope="row">@user.id</th>
                    <td><a href="/users/show/@user.id">@user.first_name @user.last_name</a></td>
                    <td>@user.email</td>
                    <td>@user.created_at</td>
                    <td>@user.admin</td>
                    @if (@ViewBag.user.admin == 1){
                    <td><a href="users/edit/@user.id">Edit</a> | <a href="delete/@user.id">Remove</a></td>}
                </tr>
                } }
            </tbody>
        </table>
    </div>
</div>